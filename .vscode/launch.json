{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Jest Tests",
            "program": "${workspaceFolder}/node_modules/jest/bin/jest.js",
            "args": [
                "--runInBand"
            ],
            "env": {
                "NODE_OPTIONS": "--experimental-vm-modules"
            },
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            "disableOptimisticBPs": true
        },
        {
            "name": "Attach to Jest",
            "type": "node",
            "request": "attach",
            "port": 9229,
            "protocol": "inspector"
        }
    ]
}